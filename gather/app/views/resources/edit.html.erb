<div class = "edit-resource-form col span-4-t span-8-d">
  <ul class="errors">
    <% if @resource %>
      <% @resource.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>
<div class = "fields new_resource">
  <h3>Edit resource</h3>
  <%= form_for @resource, url: topic_resource_path do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name, size: "35", value: @resource.url %>
    </p>
    <p>
      <%= f.label :'website (url)' %>
      <%= f.text_field :url, size: "35", value: @resource.url %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email , size: "35", value: @resource.email %>
    </p>
    <p>
      <%= f.label :phone %>
      <%= f.text_field :phone , size: "35", value: @resource.phone %>
    </p>
    <p>
      <%= f.label :address %>
      <%= f.text_field :address , size: "35", value: @resource.address %>
    </p>
    <p>
      <%= f.label :'zip code' %>
      <%= f.text_field :zip_code , size: "35", value: @resource.zip_code %>
    </p>
    <p>
      <%= f.label :summary %>
      <%= f.text_area :summary , size: "34x6", value: @resource.summary %>
    </p>
      <%= f.submit "Submit", class: "button" %>
  <% end %>
  </div>
</div>
