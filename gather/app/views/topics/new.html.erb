<div class = "new-topic-form col span-4-t span-8-d">
  <ul class="errors">
    <% if @topic %>
      <% @topic.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>
<div class = "fields">
  <%= form_for :topics, url: topics_path do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name , size: "35", placeholder: "new topic name" %>
    </p>
    <p>
      <%= f.label :summary %>
      <%= f.text_area :summary , size: "34x10", placeholder: "topic summary" %>
    </p>
    <p>
      <%= f.label :min_age %>
      <%= f.text_field :min_age , size: "35", placeholder: "age range start" %>
    </p>
    <p>
      <%= f.label :max_age %>
      <%= f.text_field :max_age , size: "35", placeholder: "age range end" %>
    </p>
      <%= f.submit "Submit", class: "button" %>
  <% end %>
  </div>
</div>
