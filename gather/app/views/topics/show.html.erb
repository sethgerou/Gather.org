<div class="topic two">
  <h3 class="heading">AGE: <%=@topic.min_age%>-<%=@topic.max_age%> Months</h3>
    <h1><%=@topic.name.upcase %></h1>
  <h3 class="heading">DEFINITION:</h3>
    <%=@topic.summary%>

  <div class="show-buttons-container">
    <div class="container">
      <div class="circle orange">
        <div class="btn-text">
          <%= link_to 'WHAT EXPERTS SAY', topic_articles_path(@topic.id) %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="circle grey">
        <div class="btn-text">
          <%= link_to 'PARENT STORIES', topic_stories_path(@topic.id) %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="circle orange">
        <div class="btn-text">
          <%= link_to 'LOCAL RESOURCES', topic_resources_path(@topic.id) %>
        </div>
      </div>
    </div>
  </div>
  <% if current_user %>
    <div class="container">
      <%= button_to "edit", edit_topic_path(@topic), method: "get", class: "button" %>
      <%= button_to "delete", topic_path(@topic), method: "delete", class: "button",data: {confirm: "Are you sure? (this will also delete all associated articles, stories, and resources, and can not be undone)"} %>
    </div>
  <% end %>
</div>
