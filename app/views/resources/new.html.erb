<div class = "new-resource-form">
  <ul class="errors">
    <% if @resource %>
      <% @resource.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>
<div class = "fields new_resource">
  <h3>New <%= @topic.name.capitalize %> resource</h3>
  <%= form_for :resources, url: topic_resources_path do |f| %>
    <p>
      <%= f.label :'name' %>
      <%= f.text_field :name, size: "35", placeholder: "company/organization name" %>
    </p>
    <p>
      <%= f.label :'website (url)' %>
      <%= f.text_field :url, size: "35", placeholder: "resource website" %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email , size: "35", placeholder: "contact email" %>
    </p>
    <p>
      <%= f.label :phone %>
      <%= f.text_field :phone , size: "35", placeholder: "contact phone" %>
    </p>
    <p>
      <%= f.label :address %>
      <%= f.text_field :address , size: "35", placeholder: "physical address" %>
    </p>
    <p>
      <%= f.label :'zip code' %>
      <%= f.text_field :zip_code , size: "35", placeholder: "zip code" %>
    </p>
    <p>
      <%= f.label :summary %>
      <%= f.text_area :summary , size: "34x6", placeholder: "summary" %>
    </p>
      <%= f.submit "Submit", class: "button" %>
  <% end %>
  </div>
</div>
